<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="complexity.moinkhan.blogger.BlogSingleActivity">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="237dp"
        android:src="@drawable/add_btn"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/singleBlogImage" />

    <TextView
        android:id="@+id/singleBlogTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:text="Blog title goes here"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/singleBlogImage"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/singleBlogDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="@+id/singleBlogTitle"
        app:layout_constraintRight_toRightOf="@+id/singleBlogTitle"
        app:layout_constraintTop_toBottomOf="@+id/singleBlogTitle"
        tools:text="Blog description goes here" />

    <Button
        android:id="@+id/singleRemoveBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Remove Post"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
